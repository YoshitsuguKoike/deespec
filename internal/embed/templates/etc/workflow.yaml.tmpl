name: simple-dev-loop
steps:
  - id: plan
    agent: claude_cli
    prompt_path: "prompts/system/plan.md"
  - id: implement
    agent: claude_cli
    prompt_path: "prompts/system/implement.md"
  - id: test
    agent: claude_cli
    prompt_path: "prompts/system/test.md"
  - id: review
    agent: claude_cli
    prompt_path: "prompts/system/review.md"
    decision:
      regex: '^DECISION:\s+(OK|NEEDS_CHANGES)\s*$'
  - id: done
    agent: system
    prompt_path: "prompts/system/done.md"