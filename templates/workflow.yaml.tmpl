name: simple-dev-loop
steps:
  - id: plan
    agent: claude_cli
    prompt: |
      TODO: {{inputs.todo}}
      200-300字で実装方針と手順。
  - id: implement
    agent: claude_cli
    prompt: |
      実装の差分を unified diff で提示。
  - id: test
    agent: claude_cli
    prompt: |
      簡易テスト手順と想定ログを出力。
  - id: review
    agent: claude_cli
    prompt: |
      変更をレビュー。最後に "DECISION: OK|NEEDS_CHANGES" を出力。
  - id: done
    agent: system
    prompt: "終了"
